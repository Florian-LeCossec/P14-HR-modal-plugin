  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "style": "./dist/Modal-GOLB2L55.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/aycet/modal-plugin.git"
  },
  "author": "aycet",
  "license": "MIT",
  "keywords": [
    "react",
    "modal",
    "plugin",
    "component",
    "library"
  ],
  "scripts": {
